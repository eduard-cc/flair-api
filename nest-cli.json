{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"introspectComments": true
				}
			}
		],
		"deleteOutDir": true
	},
	"assets": [
		{
			"include": "app/core/email/templates/**/*",
			"outDir": "dist/app/core/email/templates"
		}
	]
}
