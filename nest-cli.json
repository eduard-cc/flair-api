{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"introspectComments": true
				}
			}
		],
		"assets": [
			{
				"include": "app/core/email/templates/**/*",
				"outDir": "app/core/email/templates",
				"watchAssets": true
			}
		]
	}
}
