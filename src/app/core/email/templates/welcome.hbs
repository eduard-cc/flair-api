{{#> layout subject="Welcome to Flair" }}
  <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0;">Hi, {{name}}.</h1>
  <h2 style="font-size: 20px; font-weight: normal; margin: 0 0 16px 0;">Welcome to Flair!</h2>
  <p style="color: #555; margin: 0 0 16px 0;">Click the button below to confirm your email address.</p>
  {{> button
      url=verificationUrl
      text="Confirm Email"
      bgColor="#007BFF"
      textColor="#FFFFFF"
  }}
  <p style="color: #555; margin: 0 0 16px 0;">This link and code expire in 15 minutes. If the button doesn't work, you can manually enter the code below:</p>
  {{> code-block code=code }}
  <p style="color: #555; margin: 0 0 0 0;">If you did not request this, you can safely ignore this email.</p>
{{/layout}}
